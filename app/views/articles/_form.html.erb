<% if @article.errors.any? %>
  <h4>
      <% @article.errors.full_messages.each do |msg| %>
        <li style="color:red">
          <%= msg %>
        </li>
      <% end %>
  </h4>

<% end %>


<%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>

    <p>
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
    
<% end %>